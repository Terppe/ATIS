<Page
    x:Class="ATIS.WinUi.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:ATIS.WinUi.Behaviors"
    xmlns:controls="using:ATIS.WinUi.Controls"
    xmlns:helpers="using:ATIS.WinUi.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    Loaded="OnLoaded">

    <Grid x:Name="Root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Header Left  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image
                x:Name="TitleBarIcon"
                Width="16"
                Height="16"
                Margin="8,-8,0,0"
                Source="ms-appx:///Assets/LockScreenLogo.scale-200.png" />
            <TextBlock
                x:Name="TitleTextBlockMain"
                Width="Auto"
                Margin="10,12,0,0"
                Style="{StaticResource CaptionTextBlockStyle}" />
            <MenuBar
                x:Name="MenuBar"
                Width="Auto"
                Margin="10,0,0,10"
                VerticalAlignment="Top">
                <MenuBarItem Title="File">
                    <MenuFlyoutItem Text="New">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="N" Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Open...">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="O" Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Save">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="S" Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemClose"
                        Click="MenuFlyoutItem_Click"
                        Tag="close">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/Close.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuBarItem>
                <MenuBarItem Title="Auth">
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemLogin"
                        Click="MenuFlyoutItem_Click"
                        Tag="login">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/ArrowLeft.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemRegister"
                        Click="MenuFlyoutItem_Click"
                        Tag="register">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/ArrowRight.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemChangePw"
                        Click="MenuFlyoutItem_Click"
                        Tag="changepw">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/ArrowRight.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemForgotPw"
                        Click="MenuFlyoutItem_Click"
                        Tag="forgotpw">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/Replace.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="MenuFlyoutItemLogout"
                        Click="MenuFlyoutItem_Click"
                        Tag="logout">
                        <MenuFlyoutItem.Icon>
                            <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/ArrowRight.png" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuBarItem>
                <MenuBarItem Title="Help">
                    <MenuFlyoutItem x:Uid="MenuFlyoutItemAbout">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="I" Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>
            </MenuBar>
            <!--  Theme Switcher  -->
            <Button
                Margin="20,6,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Background="Transparent"
                Click="ToggleButton_Click">
                <FontIcon FontSize="16" Glyph="&#xE793;" />
            </Button>
            <TextBlock
                x:Name="TbDataBase"
                x:Uid="TextBlock_DbExist_SQLActiv"
                Width="Auto"
                Margin="10,12,0,0"
                VerticalAlignment="Top"
                Foreground="Green"
                TextWrapping="NoWrap"
                Visibility="Visible" />
            <ProgressBar
                x:Name="PbProgress"
                Width="200"
                Height="25"
                Margin="10,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Maximum="100"
                Minimum="0" />
            <ContentDialog
                x:Name="ContentDialogLogIn"
                CloseButtonStyle="{StaticResource CrudButtonStyle}"
                CloseButtonText="Close">
                <StackPanel>
                    <controls:LogInControl />
                </StackPanel>
            </ContentDialog>
            <ContentDialog
                x:Name="ContentDialogRegister"
                CloseButtonStyle="{StaticResource CrudButtonStyle}"
                CloseButtonText="Close">
                <StackPanel>
                    <controls:RegisterControl />
                </StackPanel>
            </ContentDialog>
            <ContentDialog
                x:Name="ContentDialogPasswordChange"
                CloseButtonStyle="{StaticResource CrudButtonStyle}"
                CloseButtonText="Close">
                <StackPanel>
                    <controls:PasswordChangeControl />
                </StackPanel>
            </ContentDialog>
            <ContentDialog
                x:Name="ContentDialogPasswordForgot"
                CloseButtonStyle="{StaticResource CrudButtonStyle}"
                CloseButtonText="Close">
                <StackPanel>
                    <controls:PasswordForgotControl />
                </StackPanel>
            </ContentDialog>
