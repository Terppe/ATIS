    xmlns:local="using:ATIS.WinUi3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:ATIS.WinUi.Helpers"
    Width="400"
    Height="500"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            HorizontalAlignment="Left"
            FontSize="14"
            FontWeight="Normal"
            Foreground="Red"
            Text="{x:Bind ViewModel.AuthenticatedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            HorizontalTextAlignment="Center"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="REGISTER" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Width="100"
            Margin="50,50,0,10"
            HorizontalAlignment="Left"
            Text="E-Mail:" />
        <TextBox
            x:Name="TbEmail"
            Grid.Row="3"
            Grid.Column="0"
            Width="200"
            Margin="150,50,0,10"
            HorizontalAlignment="Left"
            Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <interactivity:Interaction.Behaviors>
                <helpers:FocusBehavior HasInitialFocus="True" IsSelectAll="True" />
            </interactivity:Interaction.Behaviors>
        </TextBox>
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Width="100"
            Margin="50,10,0,10"
            HorizontalAlignment="Left"
            Text="Password:" />
        <PasswordBox
            Name="TxtPass"
            Grid.Row="4"
            Grid.Column="0"
            Width="200"
            Margin="150,10,0,10"
            HorizontalAlignment="Left"
            Password="{x:Bind ViewModel.PasswordChar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            PasswordChanged="Content_TextChanged" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Width="100"
            Margin="50,10,0,10"
            HorizontalAlignment="Left"
            Text="Confirm:" />
        <PasswordBox
            Name="TxtConfirmPass"
            Grid.Row="5"
            Grid.Column="0"
            Width="200"
            Margin="150,10,0,10"
            HorizontalAlignment="Left"
            PasswordChanged="Content_TextChanged" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Orange"
            Text="{x:Bind ViewModel.Errormessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Red"
            Text="{x:Bind ViewModel.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <StackPanel
            Grid.Row="8"
            Grid.Column="0"
            Margin="150,50,0,0"
            Orientation="Horizontal">
            <Button
                Name="BtRegisterSave"
                HorizontalAlignment="Center"
                Command="{x:Bind ViewModel.RegisterCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Content="Register"
                IsEnabled="False"
                Style="{StaticResource CrudButtonStyle}" />
